@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<header class="text-center my-5">
    <h1 class="display-4">@ViewData["Title"]</h1>
    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <form class="form-inline justify-content-center" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
            <button type="submit" class="btn btn-danger btn-lg mt-3">Click here to Logout</button>
        </form>
    }
    else
    {
        <p class="lead mt-3">You have successfully logged out of the application.</p>
    }
</header>

