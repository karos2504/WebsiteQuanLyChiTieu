@using WebsiteQuanLyChiTieu.Areas.Admin.Models
@model IEnumerable<ApplicationUser>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
</head>
<h1>Manage Users</h1>

@* <p> *@
@*     <a href="@Url.Action("Create", "ApplicationUser", new { area = "Admin" })" class="btn btn-success">Create New User</a> *@
@* </p> *@

<table class="table table-custom">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>
                    <a href="@Url.Action("Details", "ApplicationUser", new { id = user.Id, area = "Admin" })" class="btn btn-info">Details</a>
                    <a href="@Url.Action("Edit", "ApplicationUser", new { id = user.Id, area = "Admin" })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", "ApplicationUser", new { id = user.Id, area = "Admin" })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>