@model WebsiteQuanLyChiTieu.Models.Category
@{
    ViewData["Title"] = "Chi Tiết Danh Mục";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Chi Tiết Danh Mục</h2>

<div>
    <h4>@Model.CategoryName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Tên Danh Mục</dt>
        <dd class="col-sm-10">@Model.CategoryName</dd>
        <dt class="col-sm-2">Mô Tả</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        @if (User.IsInRole("Admin"))
        {
            <dt class="col-sm-2">Người Sở Hữu</dt>
            <dd class="col-sm-10">@(Model.User != null ? Model.User.FullName : "Không có")</dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.CategoryID" class="btn btn-primary">Sửa</a>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</div>