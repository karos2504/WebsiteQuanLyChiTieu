@model WebsiteQuanLyChiTieu.Models.Fund
@{
    ViewData["Title"] = "Xóa Quỹ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Xóa Quỹ</h2>

<h3>Bạn có chắc chắn muốn xóa quỹ này?</h3>
<div>
    <h4>@Model.FundName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Tên Quỹ</dt>
        <dd class="col-sm-10">@Model.FundName</dd>
        <dt class="col-sm-2">Số Tiền</dt>
        <dd class="col-sm-10">@Model.Amount.ToString("C0")</dd>
        <dt class="col-sm-2">Mô Tả</dt>
        <dd class="col-sm-10">@Model.Description</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="FundID" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>