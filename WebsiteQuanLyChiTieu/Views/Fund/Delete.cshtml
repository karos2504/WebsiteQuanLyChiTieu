@model WebsiteQuanLyChiTieu.Models.Fund

@{
    ViewData["Title"] = "Xóa quỹ";
}

<h1>Xóa quỹ</h1>

<h3>Bạn có chắc chắn muốn xóa quỹ này?</h3>
<div>
    <h4>@Html.DisplayFor(model => model.FundName)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FundName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FundName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Amount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="FundID" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index">Quay lại danh sách</a>
    </form>
</div>