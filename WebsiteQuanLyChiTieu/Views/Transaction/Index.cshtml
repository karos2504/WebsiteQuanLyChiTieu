@model IEnumerable<WebsiteQuanLyChiTieu.Models.Transaction>

@{
    ViewData["Title"] = "Danh sách giao dịch";
}

<h1>Danh sách giao dịch</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Tạo giao dịch mới</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Type)</th>
            <th>@Html.DisplayNameFor(model => model.Amount)</th>
            <th>@Html.DisplayNameFor(model => model.Category)</th>
            <th>@Html.DisplayNameFor(model => model.Fund)</th>
            <th>@Html.DisplayNameFor(model => model.CreatedBy)</th>
            <th>@Html.DisplayNameFor(model => model.Status)</th>
            <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Type)</td>
                <td>@Html.DisplayFor(modelItem => item.Amount)</td>
                <td>@Html.DisplayFor(modelItem => item.Category.CategoryName)</td>
                <td>@Html.DisplayFor(modelItem => item.Fund.FundName)</td>
                <td>@Html.DisplayFor(modelItem => item.CreatedBy.FullName)</td>
                <td>@Html.DisplayFor(modelItem => item.Status)</td>
                <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.TransactionID">Chi tiết</a> |
                    <a asp-action="Edit" asp-route-id="@item.TransactionID">Sửa</a>
                </td>
            </tr>
        }
    </tbody>
</table>